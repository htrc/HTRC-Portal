# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                                  controllers.HTRCPortal.index()

# Login Form
GET    /login                                              controllers.HTRCPortal.login()

# Logout Form

GET     /logout                                            controllers.HTRCPortal.logout()

# About Form

GET    /about                                               controllers.HTRCPortal.about()

# Workset List Form
GET   /listworksets                                         controllers.HTRCPortal.listWorkset(sharedPage:Int ?= 1, ownerPage:Int ?= 1)

# View Workset
GET   /viewworkset                                          controllers.HTRCPortal.viewWorkset(worksetName:String ?="", worksetAuthor:String ?="")

# Algorithm List Form
GET   /listalgorithms                                       controllers.HTRCPortal.listAlgorithms(page:Int ?= 1)

# View Algorithm
GET   /viewalgorithm                                        controllers.HTRCPortal.viewAlgorithm(algorithmName:String ?="")

# Submit Job
POST  /submitjob                                            controllers.HTRCPortal.submitAlgorithm()

# SLOAN VM List Form
GET   /listvms                                              controllers.HTRCExperimentalAnalysis.listVMs()

# SLOAN VM Create Form
GET   /createvms                                            controllers.HTRCExperimentalAnalysis.createVMForm()

POST  /createvm                                             controllers.HTRCExperimentalAnalysis.createVM()

#SLOAN VM Show VM Status
GET /showvm                                                 controllers.HTRCExperimentalAnalysis.showVMStatus(vmId:String ?="")

#SLOAN VM Delete
GET /deletevm                                               controllers.HTRCExperimentalAnalysis.deleteVM(vmId:String ?="")

GET /launchvm                                               controllers.HTRCExperimentalAnalysis.startVM(vmId:String ?="")

GET /stopvm                                               controllers.HTRCExperimentalAnalysis.stopVM(vmId:String ?="")

GET /switchvm                                               controllers.HTRCExperimentalAnalysis.switchVMMode(vmId:String ?="", mode:String ?="")

# Authenticate
POST  /login                                                controllers.HTRCPortal.authenticate()

# Map Bootstrap images
GET    /assets/img/glyphicons-halflings.png                 controllers.Assets.at(path="/public", file="/images/glyphicons-halflings.png")
GET    /assets/img/glyphicons-halflings-white.png           controllers.Assets.at(path="/public", file="/images/glyphicons-halflings-white.png")


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                                       controllers.Assets.at(path="/public", file)


